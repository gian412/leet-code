{
    "compilerOptions": {
        "baseUrl": "src",
        "rootDir": "./",
        "outDir": "./build",
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": [
        "docs",
        "test",
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "tools",
        "gulpfile.js",
        "node_modules",
        "build",
        "typings/main",
        "typings/main.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
