{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "rules": {
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "linebreak-style": [0],
        "quotes": ["warn", "single"],
        "semi": ["error", "always"],
        "no-console": 1,
        "comma-dangle": [0],
        "arrow-parens": [0],
        "object-curly-spacing": ["warn", "always"],
        "import/prefer-default-export": [0]
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["typescript", "prettire"]
}
